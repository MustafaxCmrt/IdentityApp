@model IEnumerable<AppUser>

<a asp-action="Create" class="btn btn-warning">Create User</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th style="width: 125px;"></th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count() == 0)
    {
        <tr><td class="text-center" colspan="4">Not User</td></tr>
    }
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.Id</td>
            <td>@i.FullName</td>
            <td>@i.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-primary btn-sm">Edit</a>
                <form asp-action="Delete" method="post" onsubmit="confirm('Are you sure you want to delete?')" style="display: inline-block;">
                    <input type="hidden" name="Id" value="@i.Id">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>